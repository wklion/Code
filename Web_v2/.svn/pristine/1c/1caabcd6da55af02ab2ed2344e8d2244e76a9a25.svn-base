@import "mixins";
@import "global";
@import "banner";
// # layout
html,
body {
  width: 100%;
  height: 100%;
  min-width: 100%;
}

.body {
  $banner-size: 81px;
  display: block;
  overflow-y: hidden;
  @extend .f;
  .banner,
  .content {
    margin: 0;
    @extend .w;
  }
  .banner {
    height: $banner-size;
  }
  .content {
    height: calc(100% - #{$banner-size});
    background-color: black;
    .home{
      height: 100%;
      display: flex;
      .left_div{
        flex: 2.5;
        min-width: 460px;
        height: 100%;
        .weatherInfo{
          height: 33%;
          min-height: 292px;
          margin: 2%;
          background-color: rgb(40, 40, 40);
          padding: 2%;
          .location{
            @include iconfont("\e60f");
            color: #C69C6C;
          }
          .head{
            display: flex;
            justify-content: space-between;
            .dataFrom{
              color: #C69C6C;
              text-align: center;
              line-height: 32px;
            }
          }
          .live{
            display: flex;
            height: 130px;
            justify-content: space-between;
            .curWeather{
              width: 48%;
              border: 1px solid #797979;
              background-color: #1A1A1A;
              .live_temp{
                color: #C69C6C;
                height: 60%;
                text-align: center;
                i{
                  font-size: 3rem;
                }
                span{
                  font-size: 2rem;
                }
              }
              .liveOther{
                display: flex;
                flex-wrap: wrap;
                justify-content:space-between;
                padding: 1%;
                color: gainsboro;
                div{
                  width: 50%;
                  span{
                    font-size: 0.8rem;
                  }
                }
              }
            }
            .dayAndNight{
              width: 23%;
              border: 1px solid #797979;
              background-color: #1A1A1A;
              padding: 1px;
              div{
                text-align: center;
              }
              .p16{
                height: 16%;
                font-size: 0.9rem;
              }
              .p36{
                height: 36%;
              }
              i{
                font-size: 2.5rem;
                color: #f8931d;
              }
            }
          }
          .cur_live{
            height: 130px;
            .normal_row{
              display: flex;
              justify-content: space-between;
              height: 15%;
              span{
                text-align: center;
                font-size: 0.9rem;
              }
            }
            .live_chart{
              height: 40%;
              background-color: red;
            }
          }
        }
        .dutyInfo{
          height: 23%;
          margin: 2%;
          padding: 2%;
          background: linear-gradient(to right,rgba(45, 45, 45, 1.0) 0,rgba(26, 26, 26, 1.0) 100%);
          overflow-y: hidden;
          .headInfo{
            color: #C69C6C;
            display: flex;
            justify-content: space-between;
            .title_right{
              line-height: 32px;
            }
          }
          th{
            font-weight: bold;
            background-color: #333333;
          }
          th,td{
            border:1px solid #797979;
            text-align: center;
          }
        }
        .strongWeather{
          height: 40%;
          min-height: 360px;
          margin: 10px;
          padding: 10px;
          background-color: rgb(40, 40, 40);
          .statHourspan{
            text-align: center;
          }
          th{
            font-weight: bold;
            background-color: #333333;
          }
          th,td{
            border:1px solid #797979;
            text-align: center;
          }
        }
        .headCaption{
          font-size: 1.4rem;
          font-weight: bold;
          color: #C69C6C;
        }
      }
      .right_div{
        flex: 7.5;
        height: 100%;
        .imgProduct{
          display: flex;
          flex-wrap: wrap;
          height: 60%;
          .item{
            position: relative;
            height: 46%;
            width: 31.7%;
            margin: 0.8%;
            background-color: rgb(40, 40, 40);
            .title{
              position: absolute;
              right: 1%;
              top: 1%;
              font-weight: bold;
              font-size: 1.3rem;
              background-color: rgba(0, 0, 0, 0.7);
              color: white;
              padding: 5px;
            }
            .imgMax{
              position: absolute;
              left: 1%;
              top: 1%;
              @include iconfont("\e612");
              background-color: transparent;
              border: none;
              color: #a67c51;
            }
            img{
              width: 100%;
              height: 100%;
            }
          }
        }
        .chartProduct{
          display: flex;
          height: 40%;
          .item{
            height: 94%;
            width: 33%;
            margin: 0.8%;
            padding: 10px;
            background-color: rgb(26, 26, 26);
            .chartHead{
              height: 32px;
              display: flex;
              justify-content: space-between;
              color: #C69C6C;
              .headCaption{
                font-size: 1.4rem;
                font-weight: bold;
              }
              .headRight{
                line-height: 32px;
              }
            }
            .chartBody{
              ul{
                li{
                  list-style-type: none;
                  display: flex;
                  justify-content: space-between;
                  height: 32px;
                  line-height: 30px;
                }
              }
            }
          }
        }
      }
    }
    .map_div{
      height: 100%;
      .map{
        height: 100%;
      }
    }
  }
}
.tempIcon{
  @include iconfont("\e613");
}
.humidityIcon{
  @include iconfont("\e615");
}
.windIcon{
  @include iconfont("\e610");
}
.airIcon{
  @include iconfont("\e611");
}
.carIcon{
  @include iconfont("\e619");
}
.dayPhenomena{
  @include iconfont("\e60d");
}
.nightPhenomena{
  @include iconfont("\e616");
}
