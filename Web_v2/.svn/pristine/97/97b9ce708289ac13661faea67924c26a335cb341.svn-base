//-------------------------雨情快报----------------------
//-------------------------------颜色--------------------
$border-color: #808080;
$text-color: #808080;
$btn-text-color: #476d78;
$btn-bg-color: #1c272d;
$btn-ac-bg-color: #30cafe;
$btn-border-color: #808080;
$bg-color_1: #21282e;
$bg-color_2: #1c272d;
//---------------------------尺寸--------------------------
$font-size: 16px;
@mixin input {
  button {
    width: 90px*1.5;
    height: 27px*1.5;
    border: 1px solid $btn-border-color;
    outline: 0;
    margin: 4px 7px;
    border-radius: 5px;
    background: $btn-bg-color;
    color: $text-color;
    &.active, &:hover {
      background: $btn-ac-bg-color;
      color: #000;

    }
  }
  input[type=text],
  input[type=datetime-local] {
    border: 1px solid $border-color;
    background: $bg-color_2;
  }
  input[type=checkbox] {
    display: none;
    & + label {
      padding-right: 19px;
      background: url(../imgs/input/checkbox_1.jpg) no-repeat center right;
    }

  }
  input[type=radio] {
    outline: 0;
    vertical-align: middle;
    margin-bottom: 6px;
    *margin-bottom: 6px;
  }
  label {
    margin-right: 10px;
    font-weight: normal;
  }
}

.yqkb {
  user-select: none;
  width: 810px*1.5;
  height: 879px;
  background: $bg-color_1;
  color: $text-color;
  font-size: $font-size;
  //transform: scale(1.56);
  //transform-origin: center 0;
  position: relative;
  //  height: 100%;
  margin: 0 auto;
  overflow: hidden;
  overflow-y: auto;
  @include input;
  .yqkb_option {
    //position: absolute;
    //right: 0;
    //top: 0;
    width: 776px*1.5;
    height: 247px;
    border: 1px solid #4f5457;
    background: $bg-color_2;
    margin: 10px 0 10px 18px;
    padding: 10px 13px;
    .reminder {
      color: #9a272c;
      font-size: $font-size;
    }
    .time_option {
      .time_start,
      .time_end,
      .station_option {
        display: inline-block;
        margin-right: 20px;
      }
    }
    & > div {
      margin-bottom: 2px;
    }
  }
  .result_pic {
    img {
      width: 96%;
      //height: 60%;
      height: 612px;
      display: block;
      margin: 0 0 0 18px;
    }
    width: 810px*1.5;
    //height: 100%;
  }
  #setLegendDiv{
    display: none;
    height: 100px;
    width: 100%;
    background-color: rgba(48, 202, 254, 0.2);
    border-radius: 10px;
    margin-bottom: 15px;
    position: absolute;
  }
  .result_table {
    display: none;
    list-style: none;
    width: 97%;
    margin-left: 20px;
    margin-top: 20px;
    height: 500px;
    overflow-y: auto;
    .table_header{
      height: 31px;
      border: 1px solid #808080;
      background: #343d4c;
      span{
        display: inline-block;
        width: 16%;
        text-align: center;
        margin-top: 4px;
      }
    }
    //overflow-y: auto;
    .table_con{
      list-style: none;
      padding: 0;
      border: 2px solid #4f5457;
      li {
          &:nth-of-type(2n){
              background: #343d4c;
          }
        span {
          display: inline-block;
          width: 16%;
          text-align: center;
          &:nth-of-type(1) {
            //background: #2b313d;
          }
          &:last-of-type{
            cursor: pointer;
          }
        }
      }

    }
  }
}
