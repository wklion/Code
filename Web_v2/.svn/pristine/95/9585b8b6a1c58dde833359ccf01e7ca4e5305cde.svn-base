@import "mixins";
@import "global";
@import "banner";
// # layout
html,
body {
  width: 100%;
  height: 100%;
  min-width: 100%;
}

.body {
  $banner-size: 81px;
  display: block;
  @extend .f;
  .banner,
  .content {
    margin: 0;
    @extend .w;
  }
  .banner {
    height: $banner-size;
  }
  .content {
    height: calc(100% - #{$banner-size});
  }
}
